<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Extensions -->
        <service id="form.type_extension.sonatra.choice_select2" class="Sonatra\Component\FormExtensions\Form\Extension\ChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\ChoiceType" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />
            <argument>Symfony\Component\Form\Extension\Core\Type\ChoiceType</argument>
        </service>

        <service id="form.type_extension.sonatra.country_select2" class="Sonatra\Component\FormExtensions\Form\Extension\BaseChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CountryType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\CountryType</argument>
        </service>

        <service id="form.type_extension.sonatra.currency_select2" class="Sonatra\Component\FormExtensions\Form\Extension\BaseChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CurrencyType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\CurrencyType</argument>
        </service>

        <service id="form.type_extension.sonatra.language_select2" class="Sonatra\Component\FormExtensions\Form\Extension\BaseChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\LanguageType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\LanguageType</argument>
        </service>

        <service id="form.type_extension.sonatra.locale_select2" class="Sonatra\Component\FormExtensions\Form\Extension\BaseChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\LocaleType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\LocaleType</argument>
        </service>

        <service id="form.type_extension.sonatra.timezone_select2" class="Sonatra\Component\FormExtensions\Form\Extension\BaseChoiceSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TimezoneType" />
            <argument>Symfony\Component\Form\Extension\Core\Type\TimezoneType</argument>
        </service>

        <service id="form.type_extension.sonatra.collection_select2" class="Sonatra\Component\FormExtensions\Form\Extension\CollectionSelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CollectionType" />
        </service>

        <service id="form.type_extension.sonatra.entity_select2" class="Sonatra\Component\FormExtensions\Doctrine\Form\Extension\EntitySelect2TypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Bridge\Doctrine\Form\Type\EntityType" />
        </service>

        <service id="form.type_extension.sonatra.datetime_jquery" class="Sonatra\Component\FormExtensions\Form\Extension\DateTimeJqueryTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\DateTimeType" />
        </service>

        <service id="form.type_extension.sonatra.date_jquery" class="Sonatra\Component\FormExtensions\Form\Extension\DateJqueryTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\DateType" />
        </service>

        <service id="form.type_extension.sonatra.time_jquery" class="Sonatra\Component\FormExtensions\Form\Extension\TimeJqueryTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TimeType" />
        </service>

        <service id="form.type_extension.sonatra.birthday_jquery" class="Sonatra\Component\FormExtensions\Form\Extension\BirthdayJqueryTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\BirthdayType" />
        </service>
    </services>
</container>
